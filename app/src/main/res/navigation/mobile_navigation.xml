<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.pitzertermproject.ui.home.HomeFragment"
        android:label="@string/menu_new"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.pitzertermproject.ui.gallery.GalleryFragment"
        android:label="@string/menu_edit"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.pitzertermproject.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_view"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_help"
        android:name="com.example.pitzertermproject.ui.help.HelpFragment"
        android:label="@string/action_help"
        tools:layout="@layout/help_fragment" />
